<%= form_for @task do |f| %>
<div class="form-group">
    <div class="form-group string optional">
        <%= f.label "username", :class => "string optional control-label" %>
        <%= f.text_field :username, :class => "string optional form-control form-control" %>
    </div>
    <div class="form-group string optional">
        <%= f.label "password", :class => "string optional control-label" %>
        <%= f.text_area :password, :class => "string optional form-control" %>
    </div>
    <div class="form-group string optional">
        <%= f.label "start", :class => "string optional control-label" %>
        <%= f.text_area :start, :class => "string optional form-control" %>
    </div>
    <div class="form-group string optional">
        <%= f.label "end", :class => "string optional control-label" %>
        <%= f.text_area :end, :class => "string optional form-control" %>
    </div>
    <div class="form-group string optional">
        <% if params[:seat_id] == nil %>
          <%= f.label "seat", :class => "string optional control-label" %>
          <%= f.text_area :seat, :class => "string optional form-control" %>
        <% end %>
        <% if params[:seat_id] != nil %>
          <%= f.label "seat", :class => "string optional control-label" %>
          <%= f.text_area :seat, :value => params[:seat_id],:class => "string optional form-control" %>
        <% end %>
    </div>
    <div class="form-group string optional">
        <%= f.label "remark", :class => "string optional control-label" %>
        <%= f.text_area :remark, :class => "string optional form-control" %>
    </div>
</div>
<%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
<% end %>
